<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <h3><%= link_to @user.name, user_path %><br></h3>
        <%= @user.area %><br>
      </h1>
    </section>
    <section class="col-md-4 col-md-offset-1"><%= render 'follow_form' if logged_in? %></section>
  </aside>
  <div class="col-md-8">
    <%= page_entries_info @microposts %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
        <%= paginate @microposts %>
      </ol>
    <% end %>
  </div>
</div>


